@inherits TableCertificatesComponent


<div class="table-responsive">
    <table class="table">
        <caption>@Count Certificados Cargados</caption>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Code</th>
                <th scope="col">Imagen Curso</th>
                <th scope="col">Título Curso</th>
                <th scope="col">Info Curso</th>
                <th scope="col">Fecha Finalización</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = CertificatePages.FirstRowOnPage; i < CertificatePages.LastRowOnPage; i++)
            {
                if (i >= 0 && i < CertificatePages.Count)
                {
                    <tr>
                        <th scope="row">@(i + 1) </th>
                        <td>@CertificatePages[i].Code</td>
                        <td><img src="@CertificatePages[i].Course.Image_240x135" /></td>
                        <td>@CertificatePages[i].Course.Title</td>
                        <td>@CertificatePages[i].Course.Content_info</td>
                        <td>@CertificatePages[i].Completion_date</td>
                        <td>
                            <DeleteCertificate CertificateCode="@CertificatePages[i].Code" OnDeleted="@Certificate_HandleDeleted" />
                            <a class="right" target="_blank" href="@CertificatePages[i].Long_url"><span class="oi oi-link-intact" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>

<Paginator Result="@CertificatePages" OnPageChanged="@Paginator_HandleChanged"></Paginator>