@inherits TableCertificatesComponent


<div class="table-responsive">
    <table class="table">
        <caption>Lista de Certificados</caption>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Code</th>
                <th scope="col">Imagen Curso</th>
                <th scope="col">Título Curso</th>
                <th scope="col">Info Curso</th>
                <th scope="col">Fecha Finalización</th>
                <th scope="col">Certificado</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = PageCertificates.FirstRowOnPage; i < PageCertificates.LastRowOnPage; i++)
            {
                if (i >= 0 && i < PageCertificates.Results.Count)
                {
                    <tr>
                        <th scope="row">@(i + 1) </th>
                        <td>@PageCertificates.Results[i].Code</td>
                        <td><img src="@PageCertificates.Results[i].Course.Image_240x135" /></td>
                        <td>@PageCertificates.Results[i].Course.Title</td>
                        <td>@PageCertificates.Results[i].Course.Content_info</td>
                        <td>@PageCertificates.Results[i].Completion_date</td>
                        <td><a href="@PageCertificates.Results[i].Long_url" target="_blank">Ver Certificado</a></td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>

<Paginator Result="@PageCertificates" OnPageChanged="@HandlePageChanged"></Paginator>