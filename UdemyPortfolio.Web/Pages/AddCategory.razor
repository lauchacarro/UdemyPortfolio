@page "/admin/addcategory"
@layout AdminLayout
@attribute [Authorize]
@inject NavigationManager Navigation


<p>Agregar un nueva Categoria</p>

<UploadCategory OnUploaded="@UploadCategory_OnUploaded"/>

@code{
    [CascadingParameter]
    public AdminLayout Admin { get; set; }
    protected override void OnInitialized()
    {
        if (Admin.User == null)
        {
            Navigation.NavigateTo("/Admin");
        }
        else
        {
            base.OnInitialized();
        }
    }

    void UploadCategory_OnUploaded()
    {
        Navigation.NavigateTo("/Admin/Categories");
    }
}